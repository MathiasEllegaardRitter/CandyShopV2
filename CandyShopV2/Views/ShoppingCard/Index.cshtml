@model ShoppingCardViewModel


<h2> Shopping Card : All your Candy you love </h2>
<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th> Selected Amount </th>
            <th> Candy </th>
            <th class="text-right"> Price </th>
            <th class="text-right"> SubTotal </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.ShoppingCard.ShoppingCardItems)
        {
            <tr>
                <td class="text-center"> @item.Amount </td>
                <td class="text-left"> @item.Candy.Descrition </td>
                <td class="text-right"> @item.Candy.Price.ToString("c") </td>
                <td class="text-right"> @((item.Amount * item.Candy.Price).ToString("c")) </td>
            </tr>
        }
    </tbody>
    <tfoot>
        <tr>
        <td colspan="3" class="text-right"> Total </td>
        <td class="text-right"> @Model.ShoppingCardTotal.ToString("c") </td>
         </tr>
    </tfoot>
</table>


<div class="text-center">
    <a class="btn btn-primary" asp-controller="Order" asp-action="Checkout"> Checkout </a>
</div>