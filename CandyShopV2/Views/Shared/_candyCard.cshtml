@model Candy

<div class="col-sm-4 col-lg-4 col-md-4">
    <div class="thumbnail">
        <img src=@Model.ImageThumbNail alt="image for candy shop" />

        <div class="caption">
            <h3 class="pull-right"> @Model.Price.ToString("c") </h3>
            <h3> <a asp-controller="Candy" asp-action="Details" asp-route-id="@Model.CandyId"> @Model.Name </a> </h3>
            <h4> @Model.Descrition </h4>
        </div>
        <div class="addToCart"> <p class="button"> <a class="btn btn-primary" asp-controller="ShoppingCard" asp-action="AddToShoppigCard" asp-route-candyId="@Model.CandyId"> Add to Cart </a>  </p> </div>
    </div>
</div>
